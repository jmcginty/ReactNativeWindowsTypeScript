{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "*": [ "*" ]
        },
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "index.windows.js",
        "index.android.js",
        "index.ios.js",
		"index.js",
        "build",
        "node_modules"
    ],
    "compileOnSave": false
}
